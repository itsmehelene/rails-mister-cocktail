<h2> <%= @cocktail.name %></h2>


<div class="container">
  <div class="row">
    <% @cocktail.doses.each do |dose| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card-ingredient" style="">
          <p>Ingredients</p>
          <p><%= dose.description %> <%= dose.ingredient.name %></p>
          <p><%= link_to 'Delete', dose_path(dose), :method => :delete %></p>
        </div>
      </div>
    <% end %>
  </div>
  <button class="btn btn-light"><%= link_to 'Add Ingredients', new_cocktail_dose_path(@cocktail) %></button>
   <button class="btn btn-light"><%= link_to 'Home Page', cocktails_path %></button>

</div>
